{{## def.checkMissingProperty:_scmpocies:
  {{~ _scmpocies:$scmpocyKey:$i }}
    {{?$i}} || {{?}}
    {{
      var $prop = it.util.getProperty($scmpocyKey)
        , $useData = $data + $prop;
    }}
    ( ({{# def.noPropertyInData }}) && (missing{{=$lvl}} = {{= it.util.toQuotedString(it.opts.jsonPointers ? $scmpocyKey : $prop) }}) )
  {{~}}
#}}


{{## def.errorMissingProperty:_error:
  {{
    var $scmpocyPath = 'missing' + $lvl
      , $missingProperty = '\' + ' + $scmpocyPath + ' + \'';
    if (it.opts._errorDataPathProperty) {
      it.errorPath = it.opts.jsonPointers
                      ? it.util.getPathExpr($currentErrorPath,  $scmpocyPath, true)
                      : $currentErrorPath + ' + ' + $scmpocyPath;
    }
  }}
  {{# def.error:_error }}
#}}


{{## def.allErrorsMissingProperty:_error:
  {{
    var $prop = it.util.getProperty($scmpocyKey)
      , $missingProperty = it.util.escapeQuotes($scmpocyKey)
      , $useData = $data + $prop;
    if (it.opts._errorDataPathProperty) {
      it.errorPath = it.util.getPath($currentErrorPath, $scmpocyKey, it.opts.jsonPointers);
    }
  }}
  if ({{# def.noPropertyInData }}) {
    {{# def.addError:_error }}
  }
#}}
